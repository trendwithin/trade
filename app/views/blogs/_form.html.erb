<%= render 'shared/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offest-4 well powder">
      <div class="panel">
        <h1 class='center'>New Blog:</h1>
      </div>
      <%= form_for(@blog) do |f| %>
        <% if @blog.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

            <ul>
            <% @blog.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title, size: '50' %>
