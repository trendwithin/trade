<%= render 'shared/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offest-4 well powder">
      <div class="panel">
        <h1 class='center'>New Blog:</h1>
      </div>
      <%= form_for(@blog) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>  
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title, size: '50' %>
        </div>
        <div class="field">
          <%= f.label :body %><br>
          <%= f.text_area :body, cols: '100', rows: '25' %>
        </div>
        <div class="field well">
          <%= f.label :public %>
          <%= f.check_box :statuses, as: :select, collection: Blog.statuses.keys.to_a %>
        </div>
        <div class="field well" id="publish_blog">
          <%= f.label :publish %>
          <%= f.check_box :publishes, as: :select, collection: Blog.publishes.keys.to_a %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
