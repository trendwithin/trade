        <div class="field">
          <%= f.label :body %><br>
          <%= f.text_area :body, cols: '100', rows: '25' %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
